<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <mydemo.edu.com.myapplicationdemo.activity.powerfulEditText.PowerfulEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="自带清除文本功能"
        app:funcType="canClear" />

    <mydemo.edu.com.myapplicationdemo.activity.powerfulEditText.PowerfulEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="自带查看密码功能"
        android:inputType="textPassword"
        app:funcType="canWatchPwd" />

    <mydemo.edu.com.myapplicationdemo.activity.powerfulEditText.PowerfulEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawableRight="@mipmap/ic_launcher"
        android:hint="控制两侧图标大小"
        app:leftDrawableHeight="40dp"
        app:leftDrawableWidth="40dp"
        app:rightDrawableHeight="30dp"
        app:rightDrawableWidth="30dp" />

    <mydemo.edu.com.myapplicationdemo.activity.powerfulEditText.PowerfulEditText
        android:id="@+id/pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/search"
        android:hint="自定义右侧图标点击事件" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snackbar"
        android:padding="10dp"
        android:textSize="20dp"/>

</LinearLayout>
